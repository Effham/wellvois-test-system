<?php

namespace App\Services;

use App\Models\UserIntegration;
use Google\Client;
use Google\Service\Calendar;
use Exception;
use Illuminate\Support\Facades\Log;

class GoogleCalendarOAuthService
{
    protected $client;
    protected $userIntegration;
    
    public function __construct()
    {
        $this->client = new Client();
        $this->configureClient();
    }
    
    /**
     * Configure the Google Client
     */
    protected function configureClient()
    {
        // Check for environment variables first
        $clientId = env('GOOGLE_CLIENT_ID');
        $clientSecret = env('GOOGLE_CLIENT_SECRET');
        
        if ($clientId && $clientSecret) {
            // Use environment variables
            $this->client->setClientId($clientId);
            $this->client->setClientSecret($clientSecret);
            
            // Always use the standard main domain redirect URI for consistency
            $redirectUri = 'http://localhost:8000/oauth/google/callback';
            $this->client->setRedirectUri($redirectUri);
        } else {
            // Fallback to JSON file
            $credentialsPath = storage_path('app/google-calendar/oauth-credentials.json');
            
            if (!file_exists($credentialsPath)) {
                throw new Exception('Google Calendar OAuth credentials not found. Please set GOOGLE_CLIENT_ID and GOOGLE_CLIENT_SECRET environment variables, or create the oauth-credentials.json file.');
            }
            
            try {
                $this->client->setAuthConfig($credentialsPath);
            } catch (Exception $e) {
                throw new Exception('Failed to configure Google Calendar OAuth client: ' . $e->getMessage() . '. Please check your oauth-credentials.json file format or environment variables.');
            }
        }
        
        // Common configuration
        $this->client->addScope(Calendar::CALENDAR);
        $this->client->setAccessType('offline');
        $this->client->setPrompt('select_account consent');
    }
    
    /**
     * Get the authorization URL for OAuth2 flow
     */
    public function getAuthorizationUrl(int $userId): string
    {
        // Store user ID in state parameter
        $state = base64_encode(json_encode(['user_id' => $userId]));
        $this->client->setState($state);
        
        return $this->client->createAuthUrl();
    }
    
    /**
     * Handle the OAuth2 callback and store tokens
     */
    public function handleCallback(string $code, string $state): UserIntegration
    {
        try {
            // Decode state to get user ID
            $stateData = json_decode(base64_decode($state), true);
            $userId = $stateData['user_id'] ?? null;
            
            if (!$userId) {
                throw new Exception('Invalid state parameter');
            }
            
            // Exchange code for access token
            $token = $this->client->fetchAccessTokenWithAuthCode($code);
            
            if (isset($token['error'])) {
                throw new Exception('OAuth error: ' . $token['error_description']);
            }
            
            // Set access token to get user info
            $this->client->setAccessToken($token);
            
            // Get calendar info to verify access
            $calendarService = new Calendar($this->client);
            $calendars = $calendarService->calendarList->listCalendarList();
            
            // Find primary calendar
            $primaryCalendar = null;
            foreach ($calendars->getItems() as $calendar) {
                if ($calendar->getPrimary()) {
                    $primaryCalendar = $calendar;
                    break;
                }
            }
            
            if (!$primaryCalendar) {
                throw new Exception('No primary calendar found');
            }
            
            // Store the integration
            $userIntegration = UserIntegration::updateOrCreate(
                [
                    'user_id' => $userId,
                    'provider' => UserIntegration::PROVIDER_GOOGLE,
                ],
                [
                    'name' => 'Google Calendar',
                    'type' => UserIntegration::TYPE_CALENDAR,
                    'is_active' => true,
                    'is_configured' => true,
                    'status' => UserIntegration::STATUS_ACTIVE,
                    'description' => 'Sync your personal appointments with Google Calendar',
                    'icon_url' => null,
                    'color' => '#4285F4',
                    'credentials' => [
                        'access_token' => $token['access_token'],
                        'refresh_token' => $token['refresh_token'] ?? null,
                        'expires_in' => $token['expires_in'] ?? 3600,
                        'created' => time(),
                        'calendar_id' => $primaryCalendar->getId(),
                        'calendar_name' => $primaryCalendar->getSummary(),
                    ],
                    'response_data' => [
                        'calendar_info' => [
                            'id' => $primaryCalendar->getId(),
                            'name' => $primaryCalendar->getSummary(),
                            'description' => $primaryCalendar->getDescription(),
                            'timezone' => $primaryCalendar->getTimeZone(),
                        ],
                        'oauth_token' => array_merge($token, ['created' => time()]),
                    ],
                    'last_sync_at' => now(),
                    'last_error' => null,
                ]
            );
            
            Log::info('Google Calendar OAuth integration successful', [
                'user_id' => $userId,
                'calendar_id' => $primaryCalendar->getId(),
                'calendar_name' => $primaryCalendar->getSummary(),
            ]);
            
            return $userIntegration;
            
        } catch (Exception $e) {
            Log::error('Google Calendar OAuth failed', [
                'error' => $e->getMessage(),
                'code' => $code,
                'state' => $state,
            ]);
            
            throw $e;
        }
    }
    
    /**
     * Refresh the access token if needed
     */
    public function refreshTokenIfNeeded(UserIntegration $userIntegration): bool
    {
        $credentials = $userIntegration->credentials;
        
        if (!$credentials || !isset($credentials['access_token'])) {
            return false;
        }
        
        // Check if token is expired (with 5 minute buffer)
        $expiresAt = ($credentials['created'] ?? 0) + ($credentials['expires_in'] ?? 3600) - 300;
        
        if (time() < $expiresAt) {
            return true; // Token is still valid
        }
        
        if (!isset($credentials['refresh_token'])) {
            Log::warning('Google Calendar token expired and no refresh token available', [
                'user_integration_id' => $userIntegration->id,
            ]);
            
            // Mark integration as error - user needs to re-authenticate
            $userIntegration->update([
                'status' => UserIntegration::STATUS_ERROR,
                'last_error' => 'Access token expired. Please reconnect your Google Calendar.',
            ]);
            
            return false;
        }
        
        try {
            $this->client->setAccessToken([
                'access_token' => $credentials['access_token'],
                'refresh_token' => $credentials['refresh_token'],
                'expires_in' => $credentials['expires_in'],
                'created' => $credentials['created'],
            ]);
            
            $newToken = $this->client->refreshToken($credentials['refresh_token']);
            
            if (isset($newToken['error'])) {
                throw new Exception('Token refresh error: ' . $newToken['error_description']);
            }
            
            // Update the stored credentials
            $updatedCredentials = array_merge($credentials, [
                'access_token' => $newToken['access_token'],
                'expires_in' => $newToken['expires_in'] ?? 3600,
                'created' => time(),
            ]);
            
            // Include new refresh token if provided
            if (isset($newToken['refresh_token'])) {
                $updatedCredentials['refresh_token'] = $newToken['refresh_token'];
            }
            
            $userIntegration->update([
                'credentials' => $updatedCredentials,
                'status' => UserIntegration::STATUS_ACTIVE,
                'last_error' => null,
            ]);
            
            Log::info('Google Calendar token refreshed successfully', [
                'user_integration_id' => $userIntegration->id,
            ]);
            
            return true;
            
        } catch (Exception $e) {
            Log::error('Google Calendar token refresh failed', [
                'user_integration_id' => $userIntegration->id,
                'error' => $e->getMessage(),
            ]);
            
            $userIntegration->update([
                'status' => UserIntegration::STATUS_ERROR,
                'last_error' => 'Token refresh failed: ' . $e->getMessage(),
            ]);
            
            return false;
        }
    }
    
    /**
     * Disconnect the Google Calendar integration
     */
    public function disconnect(UserIntegration $userIntegration): bool
    {
        try {
            $credentials = $userIntegration->credentials;
            
            // Revoke the token if possible
            if ($credentials && isset($credentials['access_token'])) {
                try {
                    $this->client->revokeToken($credentials['access_token']);
                } catch (Exception $e) {
                    // Log but don't fail the disconnect process
                    Log::warning('Failed to revoke Google Calendar token', [
                        'user_integration_id' => $userIntegration->id,
                        'error' => $e->getMessage(),
                    ]);
                }
            }
            
            // Update integration status
            $userIntegration->update([
                'is_active' => false,
                'is_configured' => false,
                'status' => UserIntegration::STATUS_INACTIVE,
                'credentials' => null,
                'response_data' => null,
                'last_error' => null,
            ]);
            
            Log::info('Google Calendar integration disconnected', [
                'user_integration_id' => $userIntegration->id,
            ]);
            
            return true;
            
        } catch (Exception $e) {
            Log::error('Google Calendar disconnect failed', [
                'user_integration_id' => $userIntegration->id,
                'error' => $e->getMessage(),
            ]);
            
            throw $e;
        }
    }
    
